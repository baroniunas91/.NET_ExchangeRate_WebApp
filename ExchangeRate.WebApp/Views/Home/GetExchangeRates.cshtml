@model List<ExchangeRate.WebApp.Models.Item>
@{
    ViewData["Title"] = "Currencies";
}
<div class="text-center">
    <h1 class="display-4">Currencies</h1>
</div>
<div class="row justify-content-center m-3">
    <form action="/" method="post">
        <button type="submit" class="btn btn-dark" asp-controller="Home" asp-action="Index">Check again</button>
    </form>
</div>

@if (Model.Count != 0)
{
    <div class="text-left">
        <h2 class="mb-4">Received data:</h2>
    </div>
    @foreach (var item in Model)
    {
        <div class="text-left border-bottom pb-2">
            <p>Date: @item.Date</p>
            <p>Currency: @item.Currency</p>
            <p>Quantity: @item.Quantity</p>
            <p>Rate: @item.Rate</p>
            <p>Unit: @item.Unit</p>
        </div>
        <br />
    }
}
else
{
    <div class="text-left">
        <h2 class="mb-4">Empty</h2>
    </div>
}