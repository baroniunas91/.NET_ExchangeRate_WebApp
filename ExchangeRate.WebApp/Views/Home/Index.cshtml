@model ExchangeRate.WebApp.Models.RegisterDate
@{
    ViewData["Title"] = "Home Page";
    var message = TempData["MsgChangeStatus"] ?? string.Empty;
}

@if ((string)message != "")
{
    <div class="alert alert-danger">
        @message
    </div>
}

<div class="text-center">
    <h1 class="display-4">Get exchange rates by date</h1>
</div>

<div class="text-center">
    <p>Returns a list containing exchange rates for the specified date</p>
</div>

<div class="text-left border-bottom pb-2">
    <div class="row">
        <div class="col-6">
            <form action="/" method="post" autocomplete="off">
                <div class="form-group">
                    <div class="row">
                        <div class="col-8">
                            <label asp-for="@Model.Date" class="control-label" placeholder="Select a date..."></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.Date" id="datepicker" type="text" class="form-control" />
                        </div>
                        <div class="col-3">
                            <button type="submit" class="btn btn-success form-control" asp-controller="Home" asp-action="GetExchangeRates">GET</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p class="mt-2">*Please note that it works just with the dates up to the end of the year 2014</p>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "yy/mm/dd",
                defaultDate: new Date(2010,01,01)
            });
        });
    </script>
}